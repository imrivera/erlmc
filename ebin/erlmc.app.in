#!/bin/bash

VERSION=${1}
MODULES=`ls -1 src/*.erl | awk -F[/.] '{ print "\t\t" $2 }' | sed '$q;s/$/,/g'`

cat > ebin/erlmc.app << EOF
{application, erlmc,
 [{description, "Erlang binary protocol memcached client"},
  {vsn, "${VERSION}"},
  {modules, [${MODULES}]},
  {registered, []},
  {applications, [kernel, stdlib]},
  {env, [{socket_options, []}, {recv_timeout, infinity}]}
]}.
EOF
